{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "mocha": true
    },
    "plugins": [
      "eslint-plugin-prettier"
    ],
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "prettier/prettier": ["error"],
      "strict": 0,
      "quotes": ["error", "single"],
      "arrow-parens": ["error", "always"]
    }
}